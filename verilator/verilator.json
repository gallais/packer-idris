{
  "builders": [
    {
      "headless": true,
      "shutdown_command": "echo 'idris-playground' | sudo -S poweroff",
      "source_path": "../idris/output-virtualbox-ovf/idris-playground.ovf",
      "ssh_password": "idris-playground",
      "ssh_username": "root",

      "vm_name": "idris-playground-verilator",

      "type": "virtualbox-ovf"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "execute_command": "{{.Vars}} sh '{{.Path}}'",
      "expect_disconnect": true,
      "script": "scripts/verilator.sh",
      "start_retry_timeout": "30m",
      "type": "shell"
    }
  ]
}
